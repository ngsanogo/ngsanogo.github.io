{
  "name": "ngsanogo.github.io",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "remoteUser": "root",
  "postCreateCommand": "git config --local core.hooksPath .githooks && chmod +x .githooks/pre-commit",
  "customizations": {
    "vscode": {
      "extensions": ["ms-azuretools.vscode-docker", "EditorConfig.EditorConfig"]
    }
  }
}
